{
  "name": "react-redux-advanced-web-boilerplate",
  "productName": "React-Redux advanced web boilerplate",
  "version": "1.0.0",
  "description": "Advanced and highly scalable boilerplate built for web using React v16, Redux v4, Webpack v4 {HMR, Loadables, Dynamic Reducer Injection, Selectors, Code splitting}",
  "devPorts": "CLIENT_PORT=3000 SERVER_PORT=3001",
  "prodPorts": "CLIENT_PORT=3000 SERVER_PORT=3000",
  "scripts": {
    "start:dev:all": "concurrently 'npm run start:dev:server' 'npm run start:dev:client'",
    "start:dev:server": "npm run build:dev:server && concurrently 'npm run watch:dev:nodemon:server' 'npm run watch:dev:server'",
    "start:dev:client": "cross-env NODE_ENV=development $npm_package_devPorts webpack-dev-server --config webpack/webpack.config.js",
    "build:dev:server": "cross-env NODE_ENV=development $npm_package_devPorts webpack --config webpack/webpack.server.config.js",
    "watch:dev:server": "cross-env NODE_ENV=development $npm_package_devPorts webpack --config webpack/webpack.server.config.js --watch",
    "watch:dev:nodemon:server": "cross-env NODE_ENV=development $npm_package_devPorts nodemon -q server/index.js --exec babel-node",
    "start:production:all": "npm run build:production && npm run start:production:server",
    "start:production:server": "cross-env NODE_ENV=production $npm_package_prodPorts node build/bundle.js",
    "build:production": "npm run build:production:server && npm run build:production:client",
    "build:production:server": "cross-env NODE_ENV=production $npm_package_prodPorts webpack -p --config webpack/webpack.server.config.js",
    "build:production:client": "cross-env NODE_ENV=production $npm_package_prodPorts webpack -p --config webpack/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ganeshrvel/react-redux-advanced-web-boilerplate.git"
  },
  "author": {
    "name": "Ganesh Rathinavel",
    "email": "ganeshrvel@outlook.com",
    "url": "https://github.com/ganeshrvel"
  },
  "bugs": {
    "url": "https://github.com/ganeshrvel/react-redux-advanced-web-boilerplate/issues"
  },
  "keywords": [
    "react-redux-advanced-web-boilerplate",
    "web",
    "react",
    "redux",
    "boilerplate",
    "loadables",
    "dynamic reducers",
    "code splitting"
  ],
  "homepage": "https://github.com/ganeshrvel/react-redux-advanced-web-boilerplate#readme",
